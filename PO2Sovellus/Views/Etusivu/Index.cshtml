@using PO2Sovellus.Entities

@model PO2Sovellus.ViewModels.EtusivuViewModel

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Maistuuko?</title>
</head>
<body>
    <h1>@Model.Otsikko</h1>

    <table>
        <tr><th>Id</th><th>Nimi</th></tr>
        @foreach (Ravintola r in Model.Ravintolat)
        {
            <tr><td>@r.Id</td><td>@r.Nimi</td><td>@Html.ActionLink("Näytä", "Tiedot", new { id = r.Id })</td></tr>
            
        }
    </table>

</body>
</html>